<h1><%= @user.name %>'s Album Lists</h1>

<div id="background">
  <img src="b.jpg" class="stretch" />
</div>

<% @all_albums.each do |album| %>

<p>
  <form class="form-inline" role="form">
    <div class="form-group">
      <table id="t1">
        <tr>
          <th>
            <!-- picture -->
            <a href= '/<%= album.id %>' ><img src = '<%= album.picture %>'/></a>
          </th>
          <td width="500px" height="50px">
            <!-- share the album with... -->
            <form class="form-inline" action="/new_member" method="POST">
              <% album_users = ''%>
            </form>
            <div class="form-group">
              <%= 'Members:'%>
              <% album.users.each do |user| %>
              <%= user.name + ' '%>
              <% end %>
            </div>
            <form action= "/<%= album.id %>/new_member" method='POST'>
              <strong>Who do you want to share your album with?</strong>
              <input type='text' class="form-control" name='name' value="<%= album_users%>" placeholder='Type User Name'>
              <button type="submit" class="btn btn-success">Share now!</button>
            </form>

          </td>
        </tr>
        <tr>
          <th>
            <!-- album name -->
            <center><a class="btn btn-default" href='/<%= album.id %>' role="button">"<%= album.name %>"</a></center>
          </th>
          <td align="right">
            <!-- delete album -->
            <form action= '/delete/<%= album.id %>' style='display:inline'>
              <button type= 'submit' class="btn btn-danger">Delete this Album</button>
            </form>
          </td>
        </tr>
        <tr>
          <td colspan="2">
          <form action="/<%= album.id %>/background" method='POST'>
            <input type='text' class="form-control" name='background' placeholder='background URL' />
            <button type= 'submit' class="btn btn-warning">To change Background of this Album!</button>
          </form>
        </td>
        </tr>

      </table>
    </div>
  </form>
</p>

<% end %>


<div class="panel">
  <div class="panel-body">
    <form class="addphotoform" action="/new_album" method='POST' style='center'>
      <h4 class="list-group-item-heading">Add a new album:</h4>
      <div class="form-group">
        <input class="form-control" type='text' name='name' placeholder='album name' />
      </div>
      <div class="form-group">
        <input class="form-control" type='text' name='picture' placeholder='profile picture' />
      </div>
      <button type='submit' class="btn btn-primary">Save</button>
    </form>
  </div>
</div>



<p>
  <a href="/logout" class="btn btn-default">logout</a>
  <a href="/delete_user" class="btn btn-danger">delete my account</a>
</p>
